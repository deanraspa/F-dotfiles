# Local/private config goes in the include
[include]
    path = ~/.config/.gitconfig.sec

[user]
    name = Dean Raspa
    email = draspa@gmail.com
[core]
    editor = code
    excludesfile = ~/.gitignore
[gpg]
        program = /usr/bin/krgpg
[commit]
        gpgSign = true
[tag]
        forceSignAnnotated = true
# From there, sections are in alphabetic order

[alias]
    co = "!f() { git checkout \"$@\" && git stash list | grep \"$1:\"; }; f"
    last = log -1 HEAD
    st = status
    uncommit = reset --soft HEAD~
    unstage = reset HEAD --
    lg = log --graph --abbrev-commit --decorate --date=relative --all

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[gui]
    # Remove `git gui` pop-up warning
    gcwarning = false

[help]
    autocorrect = 1

[pull]
    rebase = true

[push]
    default = simple

[rebase]
    autoStash = true
